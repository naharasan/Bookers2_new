<%= render partial: 'books/list' , locals: { user: @user , book: @book_new } %>
<h2>Book detail</h2>
<table>
 <tbody>
   <tr>
    <td>
     <%= link_to books_path(@book) do %>
     <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
     <%= @book.user.name %>
     <% end %>
     </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>
     <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book) %>
     <% end %>
    </td>
    <td>
     <% if @book.user == current_user %>
      <%= link_to "Destroy", book_path(@book), method: :delete %>
     <% end %>
    </td>
   </tr>
 </tbody>
</table>