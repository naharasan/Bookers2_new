<%= render partial: 'books/list' , locals: { user: @user , book: @book} %>
<h2>Books</h2>
<table>
 <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
 </tr>
 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %></td>
    <td>
     <%= link_to book_path(book.id) do %>
     <%= book.title %>
     <% end %>
    </td>
    <td><%= book.body %></td>
   </tr>
  <% end %>
 </tbody>
</table>